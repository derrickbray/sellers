<div class="card">
  <h1 class="card__title">Login</h1>
  {{#simple-form class="card__form" onsubmit=(action "checkForm") as | formValues |}}
    {{input class="form__input" type="text" required=true value=formValues.email placeholder="E-Mail"}}
    {{input class="form__input" type="password" required=true value=formValues.password placeholder="Password"}}
    <button type="submit" class="btn">Login</button>
  {{/simple-form}}
</div>

{{outlet}}
